<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".BiodataActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorMainBackground"
        android:clipToPadding="false"
        android:padding="@dimen/dimen26"
        tools:context=".view.activation.RegisterFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dimen50"
            android:orientation="vertical">

            <TextView
                style="@style/TextGunmetalNunitoBold24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen2"
                android:text="@string/biodata_name" />

            <EditText
                android:id="@+id/edtBiodataName"
                style="@style/EdtWhiteFour15"
                android:inputType="textCapWords"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/biodata_hint_name_holder"
                android:maxLength="8"
                android:paddingTop="@dimen/dimen14"
                android:paddingBottom="@dimen/dimen14"
                android:autofillHints="" />

            <TextView
                style="@style/TextGunmetalNunitoBold24"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dimen2"
                android:layout_marginTop="@dimen/dimen34"
                android:text="@string/biodata_age" />

            <EditText
                android:id="@+id/edtBiodataAge"
                style="@style/EdtWhiteFour15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/biodata_age_holder"
                android:inputType="number"
                android:paddingTop="@dimen/dimen14"
                android:paddingBottom="@dimen/dimen14"
                android:autofillHints="" />
        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btnBiodataNext"
            style="@style/ButtonYellowRounded18RubikMedium14Black"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/dimen36"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:paddingStart="@dimen/dimen50"
            android:paddingEnd="@dimen/dimen50"
            android:text="@string/next"
            android:textAllCaps="false" />

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>